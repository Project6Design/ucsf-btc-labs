{% set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display
] %}

{# bundle ~ '__' ~ field_name|replace({'field_' : ''})|clean_class #}

{% set attributes = attributes.addClass(classes) %}

{% if label_hidden %}
    {% if multiple %}
        <div{{ attributes }}>
            {% for item in items %}
                <div class="field__value">{{ item.content }}</div>
            {% endfor %}
        </div>
    {% else %}
        {% for item in items %}
            <div{{ attributes }}>{{ item.content }}</div>
        {% endfor %}
    {% endif %}
{% else %}
    <div{{ attributes }}>
        <div class="field__label">{{ label }}</div>
        {% if multiple %}
            <div class="field__value-container">
        {% endif %}

        {% for item in items %}
            <div class="field__value">{{ item.content }}</div>
        {% endfor %}

        {% if multiple %}
            </div>
        {% endif %}
    </div>
{% endif %}
